{% extends 'base.html.twig' %}

{% block title %}Song
{% endblock %}

{% block body %}
	<h1>Song</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ song.id }}</td>
			</tr>
			<tr>
				<th>Label</th>
				<td>{{ song.label }}</td>
			</tr>
			<tr>
				<th>Duration</th>
				<td>{{ song.duration }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('song_index') }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('song_edit', {'id': song.id}) }}">edit</a>
	{% endif %}
	{{ include('song/_delete_form.html.twig') }}
{% endblock %}
