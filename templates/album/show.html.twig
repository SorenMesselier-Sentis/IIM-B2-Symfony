{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ album.label }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('album_index') }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('album_edit', {'id': album.id}) }}">edit</a>
	{% endif %}
    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
